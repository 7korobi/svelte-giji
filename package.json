{
  "name": "svelte-giji",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "deploy": "run-s format build image && firebase deploy --only hosting",
    "deploy:hosting": "",
    "build": "svelte-kit build",
    "image": "rsync -avz ../../giji/giji/app/images/portrate/ .static_build_output/images/portrate/",
    "lint": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --write --plugin-search-dir=. .",
    "validate": "run-p format lint audit",
    "css": "run-s make:sass",
    "audit": "pnpm audit",
    "preview": "run-p preview:kit node:socket.io",
    "preview:kit": "svelte-kit preview",
    "dev": "run-p dev:kit dev:socket.io",
    "dev:kit": "svelte-kit dev",
    "dev:socket.io": "nodemon dev",
    "node:socket.io": "nodemon prod",
    "json": "run-p json:*",
    "json:game": "rsync -avz ../../giji/giji/app/json/ src/lib/game/json/",
    "json:site": "rsync -avz ../../giji/giji/config/json/ src/lib/site/json/",
    "font": "run-p font:*",
    "font:logo": "svgtofont --sources ./src/lib/icon/logo --output ./static/font --fontName logo",
    "font:mood": "svgtofont --sources ./src/lib/icon/mood --output ./static/font --fontName mood",
    "font:ui": "svgtofont --sources ./src/lib/icon/ui --output ./static/font --fontName ui",
    "make:global-env": "pnpm install -g firebase-tools",
    "make:sass": "node .node_bin/scss/index.js | sort | uniq > src/__spec__/__snapshots__/scss-contrast.txt",
    "make:brotli": "find public -type f -not -name \"*.br\" | grep -v \"dist/font\" | xargs -L1  brotli -Z -f -k"
  },
  "devDependencies": {
    "@architect/parser": "^4.0.1",
    "@nikso/adapter-serverless": "^0.1.0",
    "@sveltejs/adapter-begin": "^1.0.0-next.14",
    "@sveltejs/adapter-cloudflare-workers": "^1.0.0-next.25",
    "@sveltejs/adapter-netlify": "^1.0.0-next.35",
    "@sveltejs/adapter-node": "^1.0.0-next.55",
    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/adapter-vercel": "^1.0.0-next.31",
    "@sveltejs/kit": "next",
    "@types/http-server": "^0.12.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.11.9",
    "@types/polka": "^0.5.3",
    "@types/prettier": "~2.2.3",
    "@types/sass": "^1.43.0",
    "@types/ua-parser-js": "^0.7.36",
    "@types/ws": "^8.2.0",
    "http-server": "^0.12.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.5.0",
    "sass": "^1.43.4",
    "svelte": "^3.44.2",
    "svelte-preprocess": "^4.9.8",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "date-fns": "^2.26.0",
    "debug": "^4.3.2",
    "dexie": "^3.2.0",
    "esbuild": "^0.13.15",
    "esbuild-plugin-d.ts": "^1.0.6",
    "esbuild-svelte": "^0.5.7",
    "fast-sort": "^3.1.1",
    "firebase": "^9.5.0",
    "glob": "^7.2.0",
    "js-yaml": "^4.1.0",
    "moment": "^2.29.1",
    "mongodb": "^4.2.0",
    "pointer-tracker": "^2.5.3",
    "socket.io": "^4.4.0",
    "socket.io-client": "^4.4.0",
    "socket.io-msgpack-parser": "^3.0.1",
    "tslib": "^2.3.1",
    "ua-parser-js": "^0.7.31",
    "ws": "^8.2.3"
  }
}
